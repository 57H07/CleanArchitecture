@model CleanArchitecture.Application.DTOs.ProductDto

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h4 class="alert-heading">Are you sure you want to delete this product?</h4>
                    <p class="mb-0">This action cannot be undone. All data associated with this product will be permanently removed.</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                            <dt class="col-sm-4">Price:</dt>
                            <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">@(Model.Category ?? "No category")</dd>

                            <dt class="col-sm-4">Stock:</dt>
                            <dd class="col-sm-8">@Model.StockQuantity units</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Owner:</dt>
                            <dd class="col-sm-8">@Model.UserName</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Unavailable</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Stock Status:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsInStock)
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("MM/dd/yyyy")</dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr>
                    <div>
                        <h6>Description:</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-2">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Are you absolutely sure you want to delete this product?')">
                                <i class="fas fa-trash"></i> Delete Product
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
