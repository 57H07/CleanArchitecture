@model IEnumerable<CleanArchitecture.Application.DTOs.ProductDto>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Product
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Owner</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@product.Name</strong>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <br><small class="text-muted">@product.Description.Substring(0, Math.Min(50, product.Description.Length))@(product.Description.Length > 50 ? "..." : "")</small>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.Category))
                                    {
                                        <span class="badge bg-info">@product.Category</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No category</span>
                                    }
                                </td>
                                <td>
                                    <strong>@product.Price.ToString("C")</strong>
                                </td>
                                <td>
                                    @if (product.IsInStock)
                                    {
                                        <span class="badge bg-success">@product.StockQuantity in stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of stock</span>
                                    }
                                </td>
                                <td>@product.UserName</td>
                                <td>
                                    @if (product.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Unavailable</span>
                                    }
                                </td>
                                <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="fas fa-boxes"></i> Stock
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form asp-action="UpdateStock" asp-route-id="@product.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="quantity" value="10" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-plus text-success"></i> Add 10
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="UpdateStock" asp-route-id="@product.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="quantity" value="-5" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-minus text-warning"></i> Remove 5
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h4 class="text-muted">No products found</h4>
                <p class="text-muted">Create your first product to get started.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Product
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
