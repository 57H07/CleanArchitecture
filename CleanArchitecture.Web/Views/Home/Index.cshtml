@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Clean Architecture Demo</h1>
    <p class="lead">A comprehensive ASP.NET Core MVC template following Clean Architecture and DDD principles</p>
</div>

<div class="row mt-5">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h4 class="card-title">User Management</h4>
                <p class="card-text">Manage users with full CRUD operations, validation, and status management.</p>
                <a asp-controller="Users" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-right"></i> Manage Users
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-box fa-3x text-success mb-3"></i>
                <h4 class="card-title">Product Catalog</h4>
                <p class="card-text">Manage products with inventory tracking, categories, and user relationships.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-success">
                    <i class="fas fa-arrow-right"></i> Manage Products
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Architecture Features</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <h6><i class="fas fa-layer-group text-primary"></i> Clean Architecture</h6>
                        <ul class="list-unstyled">
                            <li>• Domain Layer</li>
                            <li>• Application Layer</li>
                            <li>• Infrastructure Layer</li>
                            <li>• Presentation Layer</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="fas fa-cogs text-info"></i> Technologies</h6>
                        <ul class="list-unstyled">
                            <li>• ASP.NET Core 9.0</li>
                            <li>• Entity Framework Core</li>
                            <li>• Mapster Mapping</li>
                            <li>• Bootstrap 5</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="fas fa-check-circle text-success"></i> Best Practices</h6>
                        <ul class="list-unstyled">
                            <li>• Repository Pattern</li>
                            <li>• Unit of Work</li>
                            <li>• Domain Events</li>
                            <li>• SOLID Principles</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="fas fa-shield-alt text-warning"></i> Features</h6>
                        <ul class="list-unstyled">
                            <li>• Form Validation</li>
                            <li>• Error Handling</li>
                            <li>• Responsive UI</li>
                            <li>• Database Seeding</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
